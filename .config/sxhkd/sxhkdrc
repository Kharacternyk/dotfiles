# Lauchers

alt + semicolon
    viter

alt + shift + semicolon
    viter lf

alt + y
    viter alsamixer

alt + shift + y
    viter btm --hide_avg_cpu

alt + u
    /usr/share/qutebrowser/scripts/open_url_in_instance.sh archlinux.org

alt + shift + u
    telegram-desktop

alt + ctrl + u
    spotify

alt + i
    zathura

alt + o
    viter ghci -v0

alt + p
    viter python -q

# Screenshots and screencasts

alt + Return
    maim -u ~/new/$(date +%s)_screenshot.png

alt + ctrl + Return
    maim -ui $(xdotool getactivewindow) ~/new/$(date +%s)_win_screenshot.png

alt + shift + Return
    simplescreenrecorder

# Keymap

alt + shift + Escape
    setxkbmap us

alt + Escape
    setxkbmap ua

alt + ctrl + Escape
    setxkbmap ua phonetic

# Reset

alt + BackSpace
    bspc wm -r; \
    pkill -USR1 -x sxhkd

ctrl + alt + BackSpace
    bspc quit

shift + alt + BackSpace
    reboot

shift + ctrl + alt + BackSpace
    poweroff

# BSPWM

alt + apostrophe
    ubspc close

alt + shift + apostrophe
    ubspc undo close

alt + ctrl + {_, shift} + apostrophe
    bspc node -{c,k}

alt + ctrl + {comma, period}
    bspc node -t {floating, tiled}

alt + m
   bspc desktop -l next

alt + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

alt + ctrl + shift + {h,j,k,l}
	bspc node -p {west,south,north,east}

alt + {_, shift + }slash
	bspc node -f @{parent,/}

alt + {_, shift + }period
	bspc node -f @{first,brother}

alt + {_,shift + }space
    bspc desktop -f {next,prev}.local

alt + ctrl + {_,shift + }space
    bspc desktop -b {next,prev}

alt + comma
    bspc monitor -a ''

alt + shift + comma
    bspc desktop -r

alt + shift + m
    bspc node -R 90

alt + ctrl + m
    bspc node -g sticky

alt + {_,shift} + n
    bspc node -d {next,prev}

alt + ctrl + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
